<%= form_for(@monitor_sensor, remote: true, html: {class: "form-horizontal"}) do |f| %>
    <%= render 'shared/error_messages', :subject => @monitor_sensor %>
    <%= field_set_tag 'Monitor Sensor' do %>

        <div class="row-fluid">
          <div class="span3">
            <%= f.label :sensor_id, "Sensor:", class: "control-label" %>
          </div>
          <div class="span3">
            <%= f.collection_select :sensor_id, @users_sensors, :id, :name, :prompt => true %>
          </div>
          <div class="span3">
            <%= f.label :legend, "Legend Name:", class: "control-label" %>
          </div>
          <div class="span3">
            <%= f.text_field :legend %>
          </div>
        </div>
        <div class="row-fluid">
          <div class="span3">
            <%= f.label :color, "Color:", class: "control-label" %>
          </div>
          <div class="span1">
            <%= f.text_field :color, class: "color"  %>
          </div>
          <div class="span2">
            <%= f.check_box :color_auto %> &nbsp; Auto
          </div>
          <%=  f.hidden_field :monitor_window_id %>
          <%=  f.hidden_field :initial_window_token %>
        </div>
    <% end %>

<% end %>
